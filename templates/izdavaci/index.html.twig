{% extends 'base.html.twig' %}

{% block title %}Izdavaci index{% endblock %}

{% block nazivTrenutneStraniceKnjiznice %}
    <img src="/files/pitcures/icons/izdavac.png">
    <h1>POPIS IZDAVAČA</h1>
{% endblock %}

{% block body %}

    <div class="postavke">
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Naziv</th>
                    <th>Adresa</th>
                    <th>Opcije</th>
                </tr>
                </thead>
                <tbody>
                {% for izdavaci in izdavacis %}
                    <tr>
                        <td>{{ izdavaci.id }}</td>
                        <td>{{ izdavaci.naziv }}</td>
                        <td>{{ izdavaci.adresa }}</td>
                        <td>
                            <button class="btn knjiznice-btn">
                                <a href="{{ path('izdavaci_show', {'id': izdavaci.id}) }}">Prikaži</a>
                            </button>
                            <button class="btn knjiznice-btn">
                                <a href="{{ path('izdavaci_edit', {'id': izdavaci.id}) }}">Uredi</a>
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">nema podataka.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <button class="btn">
            <a href="{{ path('izdavaci_new') }}">Dodaj</a>
        </button>
    </div>
{% endblock %}
