{% extends 'base.html.twig' %}

{% block title %}Prijava{% endblock %}

{% block body %}
    <header>
        Jumka bookss
    </header>
    <div class="container-fluid main">
        <div class="btn-group mb-3" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-lg biranje selected">Korisnik</button>
            <button type="button" class="btn btn-lg biranje">Knjižnica</button>
        </div>
    <div class="row col-10 col-sm-8 col-md-6 col-lg-4">
        <form method="post" class="login">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 mt-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

                <h1 class="mb-3 font-weight-normal">Prijavite se!</h1>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-4 mb-4" placeholder="E-pošta:" required autofocus>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Lozinka:" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
            #}
            <div class="form-check mb-2 mt-3">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" name="_remember_me">
                <label class="form-check-label" for="flexCheckDefault">
                    Zapamti me
                </label>
            </div>
            <div class="submit text-center">
                <button class="btn btn-lg mt-3" type="submit">
                    Prijava
                </button>
            </div>
        </form>
        <div class="text-center">
            <a href="{{ path('activation_index', {'code': ''} ) }}"><button class="btn btn-lg mt-3">
                    Aktivacija
                </button></a>
        </div>
    </div>
</div>
    <footer>Hello</footer>
{% endblock %}
