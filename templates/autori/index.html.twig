{% extends 'base.html.twig' %}

{% block title %}Popis autora{% endblock %}

{% block nazivTrenutneStraniceKnjiznice %}
    <img src="/files/pitcures/icons/pisciround.png">
    <h1>POPIS AUTORA</h1>
{% endblock %}

{% block body %}

    <div class="postavke">
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Ime</th>
                    <th>Prezime</th>
                    <th>Država</th>
                    <th>Opcije</th>
                </tr>
                </thead>
                <tbody>
                {% for autori in autoris %}
                    <tr>
                        <td>{{ autori.ime }}</td>
                        <td>{{ autori.prezime }}</td>
                        <td>{{ autori.drzava }}</td>

                        <td>

                                <a href="{{ path('autori_show', {'id': autori.id}) }}">
                                    <button class="btn knjiznice-btn">
                                        Prikaži
                                    </button>
                                </a>

                                <a href="{{ path('autori_edit', {'id': autori.id}) }}">
                                    <button class="btn knjiznice-btn">
                                        Uredi
                                    </button>
                                </a>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Nema pronađenih autora</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

            <a href="{{ path('autori_new') }}">
                <button class="btn">
                    Dodaj
                </button>
            </a>
    </div>
{% endblock %}
