{% extends 'base.html.twig' %}

{% block title %}Ponovo postavite lozinku{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <header>
        Ponovo postavljanje lozinke
    </header>
    <div class="aktivacija postavke">
        <div class="container">
            <div class="row">

                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        Unesite svoju email adresu pa ćemo vam poslati poveznicu za ponovo postavljanje lozinke
                    </small>
                </div>

                <button class="btn btn-primary">Pošalji</button>
                {{ form_end(requestForm) }}

            </div>
            <a href="{{ path('app_login') }}">
                <button class="btn knjiznice-btn" style="margin-top: 10px;">
                    Povratak na prijavu
                </button>
            </a>
        </div>
    </div>


{% endblock %}
