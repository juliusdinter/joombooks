{% extends 'base.html.twig' %}

{% block title %}Prikaz jezika{% endblock %}

{% block nazivTrenutneStraniceKnjiznice %}
    <img src="/files/pitcures/icons/jezikround.png">
    <h1>PRIKAZ JEZIKA</h1>
{% endblock %}

{% block body %}
    <div class="postavke">
        <div class="table-responsive">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ jezici.id }}</td>
                </tr>
                <tr>
                    <th>Ime</th>
                    <td>{{ jezici.ime }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <a href="{{ path('jezici_index') }}">
            <button class="btn knjiznice-btn">
                Povratak na listu jezika
            </button>
        </a>
        <a href="{{ path('jezici_edit', {'id': jezici.id}) }}">
            <button class="btn knjiznice-btn">
                Uredi
            </button>
        </a>
        {{ include('jezici/_delete_form.html.twig') }}
    </div>
{% endblock %}
